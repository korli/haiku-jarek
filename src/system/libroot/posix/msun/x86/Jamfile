	e_fmodl.S
	e_remainderl.S e_sqrtl.S s_ceill.S s_copysignl.S
	s_floorl.S s_llrintl.S
	s_logbl.S s_lrintl.S s_remquol.S s_rintl.S s_scalbnl.S s_truncl.S ;    

