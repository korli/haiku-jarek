local c99LongDoubleSources = 
	s_fabsl.c s_modfl.c ;
	
	
local longDoubleSources = catrigl.c
	e_acoshl.c e_acosl.c e_asinl.c e_atan2l.c e_atanhl.c
	e_coshl.c e_hypotl.c
	e_lgammal.c
